package com.asl.movieinfoservice.resources;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.cloud.client.discovery.DiscoveryClient;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.asl.moviecatalogservice.models.UserRating;
import com.asl.movieinfoservice.models.Movie;

@RestController
@RequestMapping("/movies")
public class MovieResource {

	@Value("${api.key}")
	private String apiKey;

	@Autowired
	private DiscoveryClient discoveryClient;

	@RequestMapping("/{movieId}")
	public Movie getMovieInfo(@PathVariable("movieId") String movieId) {
		
		MovieSummary movieSummary =  webClientBuilder.build().get().uri("http://MOVIE-DATA-SERVICES/ratingsdata/users/12").retrieve()
				.bodyToMono(UserRating.class).block();
		
		return new Movie(movieId, "Test Movie Name");
	}
}
